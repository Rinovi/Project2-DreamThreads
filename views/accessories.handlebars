{{{sectionContent}}}
<section class="bg-white py-8">
<div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
    {{#each products}}
<div id="modal1" class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
              <a href="#">
                  <img class="hover:grow hover:shadow-lg" src="{{image}}">
                  <div class="container">
                      <div class="pt-3 flex items-center justify-between">
                          <p class="">{{name}}</p>
                        <button>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </button>
                      </div>
                      <p class="pt-1 text-gray-900">{{price}}</p>
                   
                      <div class="modal" id="modal2">
                          <div class="modal-background"></div>
                          <div class="modal-card">
                              <header class="modal-card-head">
                                  <h1 class="modal-card-title">Dream Threads</h1>
                                  <button class="delete" aria-label="close"></button>
                              </header>
                              <section class="modal-card-body">
                                  
                                  <div class="box">
                                      <article class="media">
                                          <div class="media-left">
                                              <figure class="image is-128x128">
                                                  <img src="{{image}}">
                                              </figure>
                                          </div>
                                          <div class="media-content">
                                              <div class="content">
                                                  <h1 class="is-underlined">{{name}}</h1>
                                                  <p>Â£9.99</p>
                                                  <div id="sizes" class="field is-centered is-grouped">
                                                      <button class="button is-primary is-dark" id="sm">S</button>
                                                      <button class="button is-primary is-dark" id="m">M</button>
                                                      <button class="button is-primary is-dark" id="l">L</button>
                                                      <button class="button is-primary is-dark" id="xl">XL</button>
                                                  </div>
                                                  <h1 class="is-underlined">Colors:</h1>
                                                  <button class="button is-primary is-dark" id="red"><i class="fa-solid fa-shirt" style="color: #ff1900;"></i>Red</button>
                                                  <button class="button is-primary is-dark" id="blue"><i class="fa-solid fa-shirt" style="color: rgb(5, 5, 131);"></i>Blue</button>
                                                  <button class="button is-primary is-dark" id="black"><i class="fa-solid fa-shirt" style="color: black;"></i>Black</button>
                                                  <button class="button is-primary is-dark" id="white"><i class="fa-solid fa-shirt" style="color: white;"></i>White</button>
                                                  
                                              </div>
                                              <footer class="modal-card-foot">
                                                  <button class="button is-fullwidth">Checkout</button>
                                              </footer>
                                              
                                            
                                          </div>
                                      </article>
                                      </div>
                              </section>
                        </div>
                      </div>
                      <button onclick="openModal(2);" class="has-text-centered content  button is-size-7	 is-success"> 
                        Preview
                      </button> 
                  </div>
                    </a>
        </div>
    {{/each}}
    </div>  
</section>
    